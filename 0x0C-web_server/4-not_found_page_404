#!/usr/bin/env bash
# 404 page not found
sudo apt -y update
sudo apt -y install nginx
sudo ufw allow "Nginx HTTP"
sudo sh -c 'echo "Holberton School" > /var/www/html/index.nginx-debian.html'
sudo sed -i '/server_name _;/a \\tlocation /redirect_me {return 301 https://www.youtube.com/watch?v=5qjnDd1rsII;}'
/etc/nginx/sites-available/default
sudo touch /var/www/html/404.html
sudo echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html
sudo sed -i '/:80 default_server;/a \\terror_page 404 /404.html;' /etc/nginx/sites-available/default
sudo service nginx restart
